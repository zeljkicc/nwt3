@model IEnumerable<Projekat3_NWT.Models.PropertyImage>

<div id="myCarousel-@Model.First().Property.Id" class="carousel slide" data-ride="carousel" data-interval="false">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel-@Model.First().Property.Id" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel-@Model.First().Property.Id" data-slide-to="1"></li>
        <li data-target="#myCarousel-@Model.First().Property.Id" data-slide-to="2"></li>
        <li data-target="#myCarousel-@Model.First().Property.Id" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

            <div class="item active">
                <img src="@Url.Content(Model.First().url)" alt="@Model.First().description">
            </div>

        @foreach (var item in Model.Skip(1))
        {
            <div class="item">
                <img src="@Url.Content(item.url)" alt="@Html.DisplayFor(modelItem => item.description)">
                <div class="carousel-caption">
                    <p>@Html.DisplayFor(modelItem => item.description)</p>
                </div>
            </div>
        }

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel-@Model.First().Property.Id" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel-@Model.First().Property.Id" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



